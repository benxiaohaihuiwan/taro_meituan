.activity {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 12PX;
  padding: 0 10PX ;
  height: 30PX ;
  margin-top: 10PX;
}
.activity .type {
  color: #FFFFFF;
  background-color: red;
  width: 20PX;
  height: 20PX;
  border-radius: 1PX;
  text-align: center;
  line-height: 20PX;
}
.activity .length {
  color: #CCCCCC;
}